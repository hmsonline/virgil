cwd=`dirname $0`

# general jars.
for jar in $cwd/../lib/*.jar; do
    CLASSPATH=$CLASSPATH:$jar
done

# mapreduce jars.
for jar in $cwd/../mapreduce/jars/*.jar; do
    CLASSPATH=$CLASSPATH:$jar
done

# Use JAVA_HOME if set, otherwise look for java in PATH
if [ -x $JAVA_HOME/bin/java ]; then
    JAVA=$JAVA_HOME/bin/java
else
    JAVA=`which java`
fi

CLASSPATH=$CLASSPATH:$cwd/../conf/
CLASSPATH=$CLASSPATH:$cwd/../mapreduce/conf/

JVM_OPTS="$JVM_OPTS -javaagent:$cwd/../lib/aspectjweaver-1.6.11.jar -debug"

$JAVA $JVM_OPTS -cp $CLASSPATH com.hmsonline.virgil.VirgilService server conf/virgil.yaml $@
